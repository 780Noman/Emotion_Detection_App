# Use a standard Python image
FROM python:3.10-slim

# Set environment variables for Python
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# --- PERMISSIONS FIX: Create and switch to a non-root user ---
# Create a new user named "user" with user ID 1000
RUN useradd -m -u 1000 user
# Switch to the "user" so all following commands run as this user
USER user
# Set the home directory for the user
ENV HOME=/home/user
# Set the working directory inside the user's home
WORKDIR $HOME/app
# --- END PERMISSIONS FIX ---

# Copy and install dependencies
# Use --chown=user to make sure the "user" owns this file
COPY --chown=user requirements.txt .
RUN pip install --no-cache-dir --upgrade -r requirements.txt

# Copy the rest of your project code
# Use --chown=user to make sure the "user" owns all project files
COPY --chown=user . .

# Run collectstatic as the "user"
RUN python manage.py collectstatic --no-input

# Expose the port Hugging Face expects
EXPOSE 7860

# Command to run your Django application
CMD ["gunicorn", "--bind", "0.0.0.0:7860", "FER_deploy.wsgi"]